@inject MvcDemo4.BL.Interface.IEmployeeRep employee





@inject MvcDemo4.BL.Interface.IDepartmentRep Department 
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table border="1" class="table table-striped table-hover table-bordered text-center font-weight-bold">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>

        </tr>

    </thead>
    <tbody>
        <tr>
            @foreach (var item in employee.Get())
            {
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Salary</td>


            }
        </tr>
    </tbody>
</table>

<select>
    <option>Choose Name</option>

    @foreach (var item in employee.Get())
    {
        <option>
            @item.Name

        </option>
    }

</select>



<select>
    <option>Choose Department </option>

    @foreach (var item in Department.Get())
    {
        <option value="@item.Id">
            @item.Name
        </option>
    }
</select>


